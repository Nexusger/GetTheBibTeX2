@model Dblp.WebUi.Models.CartIndexViewModel
@{
    bool resultsAvailable = Model != null && Model.Cart.SearchResults != null && Model.Cart.SearchResults.Count() > 0;
    ViewBag.Title = "Merkliste";
}

@if (resultsAvailable)
{
    <h2>Folgende Einträge wird die BibTeX-Datei enthalten</h2>
    <ul>
        @foreach (var searchResult in Model.Cart.SearchResults)
        {
            <li>@searchResult.DisplayText</li>
        }
    </ul>
    <div class="btn-group" role="group" aria-label="Download der BibTeX Datei">
        @Html.ActionLink("Download der BibTeX Datei", "Download", "ShoppingCart", null, new {@class = "btn btn-success"})
    </div>
    <div class="btn-group" role="group" aria-label="Download der BibTeX Datei">
        @Html.ActionLink("Leeren der Merkliste", "Clear", "ShoppingCart", null, new { @class = "btn btn-danger" })
    </div>
}
else
{
    <h2>Ihre Merkliste ist leer</h2>
    <p>Fügen Sie @Html.ActionLink("BibTeX Einträge", "Index", "Home") hinzu.</p>
}
